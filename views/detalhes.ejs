<!DOCTYPE html>
<html lang="pt-br">
<head> 
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/CSS/detalhes.css" type="text/css">
</head>
<body>
    <main>
        <% pokemonAtual.forEach(element => { %>
                <div id="card-container">
                    <div id="header-container">
                        <span class="card-id"> <%= element.id %> </span>
                        <span class="card-num"> <%= element.num %></span>
                    </div>
                    <div class="main-card">
                        <img src="<%= element.img %>" alt=" <%= element.name %>">
                        <div class="card-name"> <%= element.name %> </div>
                        <div class="data-card">
                            <span class="width"> <%= element.weight %> </span> 
                            <span class="height"> <%= element.height %> </span>
                        </div>
                    </div>
                    <div class="footer-card"> <%= element.type %> </div>
                </div>
        <%}) %>
    </main>
</body>
</html>